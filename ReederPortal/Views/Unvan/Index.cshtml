@using ReederPortal.Models
@model List<Unvan>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
<a href="~/Unvan/YeniUnvan/" class="btn btn-primary"> Yeni Unvan Ekle</a>
<br />
<br />
<table class="table table-hover">
    <tr>
        <th><b>ID</b></th>
        <th><b>Unvan Adı</b></th>
        
        <th><b>Sil</b></th>
        <th><b>Güncelle</b></th>
        <th><b>Detaylar</b></th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.UnvanID </td>
            <td>@x.UnvanAd</td>
            
            <td><a href="/Unvan/UnvanSil/@x.UnvanID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Unvan/UnvanGetir/@x.UnvanID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Unvan/UnvanDetay/@x.UnvanID" class="btn btn-default" style="background-color:#dee61d">Detaylar</a></td>
        </tr>
    }
</table>
