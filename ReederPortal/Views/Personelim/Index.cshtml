@using ReederPortal.Models
@model List<Personel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<br />
<a href="/Personelim/YeniPersonel" class="btn btn-primary"> Yeni Personel Ekle</a>
<br />
<br />
<table class="table table-hover">
    <tr>
        <th><b>ID</b></th>
        <th><b>Tc Kimlik No</b></th>
        <th><b>Adı</b></th>
        <th><b>Soyadı</b></th>
        <th><b>Doğum Yeri</b></th>
        <th><b>Doğum Tarihi</b></th>
        <th><b>Cinsiyet</b></th>
        <th><b>Sürücü Belgesi</b></th>
        <th><b>Medeni Durumu</b></th>
        <th><b>Eş Çalışma Durumu</b></th>
        <th><b>Çocuk Sayısı</b></th>
        <th><b>Sigara Kullanım Durumu</b></th>
        <th><b>Hobi</b></th>
        <th><b>Mezuniyet</b></th>
        <th><b>İşe Başlama Tarihi</b></th>
        <th><b>Fotograf</b></th>
        <th><b>Departman</b></th>
        <th><b>Unvan</b></th>
        <th><b>Seviye</b></th>

        <th><b>Sil</b></th>
        <th><b>Güncelle</b></th>
        
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.PersonelID </th>
            <th>@x.TcKimlikNo </th>
            <th>@x.PersonelAd</th>
            <th>@x.PersonelSoyad</th>
            <th>@x.DogumYer</th>
            <th>@x.DogumTarih.ToString("dd.MM.yyyy")</th>
            <th>@x.Cinsiyet</th>
            <th>@x.SurucuBelgesi</th>
            <th>@x.MedeniDurum</th>
            <th>@x.EsCalismaDurum</th>
            <th>@x.CocukSayisi</th>
            <th>@x.SigaraKullanimi</th>
            <th>@x.Hobi</th>
            <th>@x.Mezuniyet</th>
            <th>@x.IseBaslamaTarih.ToString("dd.MM.yyyy")</th>
            <th>@x.Fotograf</th>
            <th>@x.Birim.BirimAd</th>
            <th>@x.Unvan.UnvanAd</th>
            <th>@x.Seviye.SeviyeAd</th>
            
            <th><a href="/Personelim/PersonelSil/@x.PersonelID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Personelim/PersonelGetir/@x.PersonelID" class="btn btn-success">Güncelle</th>

        </tr>
    }
</table>






